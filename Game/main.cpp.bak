class game
{
public:

	size windowSize;

	game();

	bool init(int type = EX_SHOWCONSOLE);
	void loop();
	void stop();


private:

	void process();
	void update();
	void render();

	bool isRunning;

};

bool game::init(int type = EX_SHOWCONSOLE)
{
	initgraph(game::windowsSize.width, windowsSize.height, type);
}

void game::loop()
{
	while (isRunning)
	{
		process();
		update();
		render();
	}
}

void game::stop()
{
	closegraph();
}